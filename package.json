{
	"name": "pdf-mate",
	"version": "0.0.1",
	"main": "electron.js",
	"description": "",
	"author": {
		"name": "Kang Yun Wang",
		"url": "https://www.kyunwang.nl"
	},
	"license": "GPL-3.0",
	"homepage": "./",
	"scripts": {
		"dev": "parcel -p 4050 ./src/index.html -d dist/",
		"start": "electron .",
		"begin": "concurrently \"cross-env BROWSER=none npm run dev start\" \"wait-on http://localhost:4050 && electron .\"",
		"build": "parcel build index.html"
	},
	"dependencies": {
		"react": "^16.8.4",
		"react-dom": "^16.8.4"
	},
	"devDependencies": {
		"@babel/core": "^7.3.4",
		"babel-preset-nano-react-app": "^0.1.0",
		"concurrently": "^4.1.0",
		"cross-env": "^5.2.0",
		"electron-devtools-installer": "^2.2.4",
		"electron-is-dev": "^1.0.1",
		"electron": "^4.0.7",
		"parcel-bundler": "^1.11.0",
		"parcel-plugin-bundle-visualiser": "^1.2.0",
		"wait-on": "^3.2.0"
	},
	"build": {
		"appId": "com.kyunwang.nl",
		"compression": "normal",
		"productName": "PDF mate",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {},
		"mas": {},
		"win": {},
		"linux": {}
	},
	"babel": {
		"presets": [
			"nano-react-app"
		],
		"plugins": [
			[
				"@babel/plugin-proposal-class-properties",
				{
					"loose": true
				}
			],
			[
				"@babel/plugin-transform-react-jsx",
				{
					"pragmaFrag": "React.Fragment"
				}
			]
		]
	}
}
